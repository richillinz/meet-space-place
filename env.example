# environment configuration
# copy this to .env for local development
# railway will provide database_url and redis_url automatically

node_env=development
port=3000

# database connection (railway provides this automatically)
database_url=your_postgresql_connection_string

# redis connection (railway provides this automatically)
redis_url=your_redis_connection_string

# jwt configuration
jwt_secret=your_secure_random_string_change_this_in_production
jwt_expiration=7d

# file upload configuration
max_file_size=5242880
allowed_file_types=image/jpeg,image/png,image/webp

# cors configuration
cors_origin=*
